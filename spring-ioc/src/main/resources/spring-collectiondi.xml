<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


		<!-- 集合属性注入  -->
	<bean id="collectionBean" class="com.spring.collectiondi.CollectionBean">
		<!-- 注入List -->
		<property name="hobbies">
			<list>
				<!-- <value>注入简单类型，<ref />注入复杂类型 -->
				<value>音乐</value>
				<value>体育</value>
			</list>
		</property>
		<!-- 注入Set -->
		<property name="numbers">
			<set>
				<value>10</value>
				<value>6</value>
				<value>15</value>
			</set>
		</property>
		<!-- 注入 map -->
		<property name="map">
			<map>
<!-- 			复杂类型	<entry key-ref="" value-ref=""></entry> -->
				<entry key="name" value="alibaba"></entry>
				<entry key="address" value="北京"></entry>
			</map>
		</property>
		<!-- 注入Properties -->
		<property name="properties">
			<props>
				<prop key="company">阿里</prop>
				<prop key="pnum">100</prop>
			</props>
		</property>
	</bean>



</beans>